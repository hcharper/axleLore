{
  "expo": {
    "name": "RigSherpa",
    "slug": "rigsherpa",
    "version": "0.2.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "rigsherpa",
    "splash": {
      "backgroundColor": "#0a0e14"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rigsherpa.mobile",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "RigSherpa needs local network access to connect to your Pi",
        "NSBonjourServices": ["_http._tcp"]
      }
    },
    "android": {
      "package": "com.rigsherpa.mobile",
      "adaptiveIcon": {
        "backgroundColor": "#0a0e14"
      }
    },
    "plugins": ["expo-router"]
  }
}
