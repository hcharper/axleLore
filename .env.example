# AxleLore Environment Configuration
# Copy this file to .env and update values

# Application
APP_NAME=AxleLore
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database
DATABASE_URL=sqlite:///./data/db/axlelore.db

# Paths
DATA_DIR=./data
VEHICLES_DIR=./data/vehicles
LOGS_DIR=./data/logs

# LLM Settings (Ollama)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct-q4_K_M
OLLAMA_TIMEOUT=120

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# RAG Settings
CHUNK_SIZE=800
CHUNK_OVERLAP=100
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.7

# OBD2 Settings (optional)
OBD2_ENABLED=false
OBD2_PORT=/dev/ttyUSB0
OBD2_BAUDRATE=38400
OBD2_TIMEOUT=10

# Default Vehicle
DEFAULT_VEHICLE=fzj80

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/axlelore.log

# CORS (for development)
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
