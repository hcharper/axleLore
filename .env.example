# AxleLore Environment Configuration
# Copy this file to .env and update values as needed.
# Targets: Raspberry Pi 5 (8 GB) · Qwen3 1.7B · Fully Offline

# Application
APP_NAME=AxleLore
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# LLM Settings (Ollama) — Pi 5 8GB optimised
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen3:1.7b
OLLAMA_FALLBACK_MODEL=gemma3:1b
OLLAMA_TIMEOUT=120
LLM_TEMPERATURE=0.4
LLM_MAX_TOKENS=1024

# Embedding Model (~25 MB)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# RAG Settings
CHUNK_SIZE=600
CHUNK_OVERLAP=100
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.65

# OBD2 Settings (optional — enable when adapter is connected)
OBD2_ENABLED=false
# OBD2_PORT=/dev/rfcomm0
# OBD2_BAUDRATE=38400

# Default Vehicle
DEFAULT_VEHICLE=fzj80

# Logging
LOG_LEVEL=INFO

# CORS (for development)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
